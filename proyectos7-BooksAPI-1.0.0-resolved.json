{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample Bookstore server.  You can find \nout more about Swagger at \n[http://swagger.io](http://swagger.io) or on \n[irc.freenode.net, #swagger](http://swagger.io/irc/).\n",
    "version": "1.0.0",
    "title": "Biblioteca Virtual",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "ceciavila8@gmail.com"
    }
  },
  "host": "virtserver.swaggerhub.com",
  "basePath": "/proyectos7/BooksAPI/1.0.0",
  "tags": [
    {
      "name": "book",
      "description": "Everything about books.",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "book"
        ],
        "summary": "Show all the books on the library",
        "operationId": "getBook",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "titulo",
            "in": "formData",
            "description": "Title of the book",
            "required": true,
            "type": "string"
          },
          {
            "name": "autor",
            "in": "formData",
            "description": "Author of the book",
            "required": true,
            "type": "string"
          },
          {
            "name": "imagen",
            "in": "formData",
            "description": "file to upload, image of the book",
            "required": false,
            "type": "file"
          },
          {
            "name": "estado",
            "in": "formData",
            "description": "State of the book",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        },
        "security": [
          {
            "bookstore_auth": [
              "write:books",
              "read:books"
            ]
          }
        ]
      },
      "post": {
        "tags": [
          "book"
        ],
        "summary": "Add a new book to the libary",
        "operationId": "addBook",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "book object that needs to be added to the store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "bookstore_auth": [
              "write:books",
              "read:books"
            ]
          }
        ]
      }
    },
    "/id": {
      "put": {
        "tags": [
          "book"
        ],
        "summary": "Update an existing book card",
        "operationId": "updateBook",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Book object that needs to be added to the store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Book not found"
          },
          "405": {
            "description": "Validation exception"
          }
        },
        "security": [
          {
            "bookstore_auth": [
              "write:books",
              "read:books"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "book"
        ],
        "summary": "Delete a book",
        "operationId": "deleteBook",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "titulo",
            "in": "formData",
            "description": "Title of the book",
            "required": true,
            "type": "string"
          },
          {
            "name": "autor",
            "in": "formData",
            "description": "Author of the book",
            "required": true,
            "type": "string"
          },
          {
            "name": "imagen",
            "in": "formData",
            "description": "file to upload, image of the book",
            "required": false,
            "type": "file"
          },
          {
            "name": "estado",
            "in": "formData",
            "description": "State of the book",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Book not found"
          }
        },
        "security": [
          {
            "bookstore_auth": [
              "write:books",
              "read:books"
            ]
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "bookstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://bookstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:books": "modify books in your account",
        "read:books": "read your books"
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "required": [
        "autor",
        "nombre"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "nombre": {
          "type": "string",
          "example": "El Se√±or de los Anillos"
        },
        "autor": {
          "type": "string",
          "example": "J.R.R.Tolkien"
        },
        "imagen": {
          "type": "integer",
          "format": "int64"
        },
        "estado": {
          "type": "string",
          "description": "State of the book",
          "enum": [
            "reading",
            "not readed",
            "readed"
          ]
        }
      },
      "xml": {
        "name": "Book"
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}